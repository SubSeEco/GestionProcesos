@model App.Model.GestionDocumental.GD

@Html.Action("Header", "Workflow", new { Model.WorkflowId })


@Html.HiddenFor(q => q.WorkflowId)
@Html.HiddenFor(q => q.ProcesoId)


<div class="container">
    <div class="row">
        <div class="col s12 m6 l6">

            <div class="card">
                <div class="card-content">
                    <span class="card-title">Información del ingreso</span>
                    <div class="row">
                        <div class="input-field col s12 m10">
                            <strong>@Html.DisplayNameFor(m => Model.GDId)</strong><br />
                            @Html.DisplayFor(m => Model.GDId)
                        </div>

                        <div class="input-field col s12 m10">
                            <strong>@Html.DisplayNameFor(m => Model.Fecha)</strong><br />
                            @Html.DisplayFor(m => Model.Fecha)
                        </div>

                        <div class="input-field col s12 m10">
                            <strong>@Html.DisplayNameFor(m => Model.Materia)</strong><br />
                            @Html.DisplayFor(m => Model.Materia)
                        </div>
                        <div class="input-field col s12 m10">
                            <strong>@Html.DisplayNameFor(m => Model.Referencia)</strong><br />
                            @Html.DisplayFor(m => Model.Referencia)
                        </div>
                        <div class="input-field col s12 m10">
                            <strong>@Html.DisplayNameFor(m => Model.Observacion)</strong><br />
                            @Html.DisplayFor(m => Model.Observacion)
                        </div>

                        <div class="input-field col s12 m12 l12">
                            <label>
                                @Html.CheckBoxFor(m => Model.RequiereFirmaElectronica)
                                <span>@Html.LabelFor(m => Model.RequiereFirmaElectronica)</span>
                            </label>
                        </div>
                        <div class="input-field col s12 m10">
                            <div class="section"></div>
                            <strong>@Html.DisplayNameFor(m => Model.Pl_UndCod)</strong><br />
                            @Html.DisplayFor(m => Model.Pl_UndCod)
                        </div>
                        <div class="input-field col s12 m10">
                            <strong>@Html.DisplayNameFor(m => Model.UsuarioDestino)</strong><br />
                            @Html.DisplayFor(m => Model.UsuarioDestino)
                        </div>


                    </div>
                </div>
            </div>
        </div>
        <div class="col s12 m6 l6">
            @Html.Action("Documents", "Workflow", new { Model.WorkflowId })
            @Html.Action("History", "Workflow", new { Model.WorkflowId })
        </div>
    </div>
</div>

@Html.Action("Footer", "Workflow", new { Model.WorkflowId })


<script type="text/javascript">
    $(document).ready(function () {
        $('.modal').modal();
        $('select').formSelect();
        $('.tooltipped').tooltip();

        $("input[type='hidden']").each(function (index, element) {
            $(this).appendTo($(element).parent());
        });

        var isChecked = $("#RequiereFirmaElectronica").is(':checked');
        $('#divRequiereFirmaUnidad').toggle(isChecked);
        $('#divRequiereFirmaUsuario').toggle(isChecked);

    });

</script>

