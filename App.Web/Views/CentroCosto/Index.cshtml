@model IEnumerable<App.Model.Cometido.CentroCosto>

<div class="container">

    <h3>Centro Costo</h3>
    <div class="card">
        <div class="card-content">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CentroCostoId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CCNombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CCActivo)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CentroCostoId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CCNombre)
                        </td>
                        <td>
                            @if (item.CCActivo)
                            {
                                <p>True</p>
                            }
                            else
                            {
                                <p>False</p>
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Detalles", "Details", new { id = item.CentroCostoId })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div class="fixed-action-btn">
    <a href='@Url.Action("Create")' class="btn-floating btn-large blue tooltipped" data-position="left" data-delay="500" data-tooltip="Agregar nuevo elemento"><i class="large material-icons">add</i></a>
</div>
