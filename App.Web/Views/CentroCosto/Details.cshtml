@model App.Model.Cometido.CentroCosto

<h3>Centro Costo</h3>
<div class="card">
    <div class="card-content">
        <div class="input-field col s12 m10">
            <strong>@Html.DisplayNameFor(m => Model.CentroCostoId)</strong>
            <p>@Html.DisplayFor(m => Model.CentroCostoId)</p>
        </div>
        <div class="input-field col s12 m10">
            <strong>@Html.DisplayNameFor(m => Model.CCNombre)</strong>
            <p>@Html.DisplayFor(m => Model.CCNombre)</p>
        </div>
        <div class="input-field col s12 m10 l10">
            <label>
                @Html.CheckBoxFor(m => m.CCActivo, new { @disabled = "disabled" })
                <span>@Html.LabelFor(m => Model.CCActivo)</span>
            </label>
        </div>
        <br /><br />
        <a href='@Url.Action("Edit", new { id = Model.CentroCostoId })' class="btn blue">Editar</a>
        <a href='@Url.Action("Delete", new { id = Model.CentroCostoId })' class="btn red">Eliminar</a>

    </div>
</div>
<div class="fixed-action-btn">
    <a href="javascript:history.back()" class="btn-floating btn-large grey"><i class="large material-icons">chevron_left</i></a>
</div>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('input:hidden').each(function (index, element) {
            $(element).appendTo($(element).parent());
        });
    });
</script>