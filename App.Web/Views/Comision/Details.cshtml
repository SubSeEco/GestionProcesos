@model App.Model.Comisiones.Comisiones

@Html.Action("Header", "Workflow", new { Model.WorkflowId })

@Html.HiddenFor(q => q.WorkflowId)
@Html.HiddenFor(q => q.ProcesoId)
    <div class="container">
        <div class="row">
            <div class="col s12 m10 l8">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Solicitud Comision</span>
                        <div class="row">
                            <div class="input-field col s12 m10 l3">
                                <strong>
                                    @Html.DisplayNameFor(m => Model.FechaSolicitud)
                                </strong>
                                @Html.DisplayFor(m => Model.FechaSolicitud)
                            </div>
                            <div class="input-field col s12 m6 l4">
                                <strong>
                                    @Html.DisplayNameFor(m => Model.ComisionesId)
                                </strong>
                                @Html.DisplayFor(m => Model.ComisionesId)
                            </div>
                        </div>
                        <div id="jQuery_accordion">
                            <h3><span style="font-weight: bold">I. Datos del Funcionario: </span></h3>
                            <div class="row">
                                <div class="input-field col s12 m10 l10">
                                    <strong>
                                        @Html.DisplayNameFor(m => Model.UnidadDescripcion)
                                    </strong>
                                    @Html.DisplayFor(m => Model.UnidadDescripcion)
                                </div>
                                <div class="input-field col s12 m10 l10">
                                    <strong>
                                        @Html.DisplayNameFor(m => Model.Nombre)
                                    </strong>
                                    @Html.DisplayFor(m => Model.Nombre)
                                </div>
                                <div class="input-field col s12 m5 l5">
                                    <strong>
                                        @Html.DisplayNameFor(m => Model.Rut)
                                    </strong>
                                    @Html.DisplayFor(m => Model.Rut)
                                </div>
                                <div class="input-field col s12 m5 l5">
                                    <strong>
                                        @Html.DisplayNameFor(m => Model.DV)
                                    </strong>
                                    @Html.DisplayFor(m => Model.DV)
                                </div>
                                <div class="input-field col s12 m5 l5">
                                    <strong>
                                        @Html.DisplayNameFor(m => Model.CargoDescripcion)
                                    </strong>
                                    @Html.DisplayFor(m => Model.CargoDescripcion)
                                </div>
                                <div class="input-field col s12 m5 l5">
                                    <strong>
                                        @Html.DisplayNameFor(m => Model.CalidadDescripcion)
                                    </strong>
                                    @Html.DisplayFor(m => Model.CalidadDescripcion)
                                </div>
                                <div class="input-field col s12 m5 l5">
                                    <strong>
                                        @Html.DisplayNameFor(m => Model.GradoDescripcion)
                                    </strong>
                                    @Html.DisplayFor(m => Model.GradoDescripcion)
                                </div>
                                <div class="input-field col s12 m5 l5">
                                    <strong>
                                        @Html.DisplayNameFor(m => Model.EstamentoDescripcion)
                                    </strong>
                                    @Html.DisplayFor(m => Model.EstamentoDescripcion)
                                </div>
                                <div class="input-field col s12 m5 l5">
                                    <strong>
                                        @Html.DisplayNameFor(m => Model.ProgramaDescripcion)
                                    </strong>
                                    @Html.DisplayFor(m => Model.ProgramaDescripcion)
                                </div>
                                <div class="input-field col s12 m5 l5">
                                    <strong>
                                        @Html.DisplayNameFor(m => Model.ConglomeradoDescripcion)
                                    </strong>
                                    @Html.DisplayFor(m => Model.ConglomeradoDescripcion)
                                </div>
                            </div>

                            <h3><span style="font-weight: bold">II. Datos de la Solicitud: </span></h3>
                            <div class="row">
                                <div class="input-field col s12 m8 l12">
                                    <strong>
                                        <span>@Html.DisplayNameFor(m => Model.FinanciaOrganismo)</span>
                                    </strong>
                                    @string.Format("{0}", Model.FinanciaOrganismo.Value ? "SI" : "NO")
                                </div>
                                <div class="input-field col s12 m8 l13">
                                    <strong>
                                        <span>@Html.DisplayNameFor(m => Model.Alojamiento)</span>
                                    </strong>
                                    @string.Format("{0}", Model.Alojamiento ? "SI" : "NO")
                                </div>
                                <div class="input-field col s12 m8 l13">
                                    <strong>
                                        <span>@Html.DisplayNameFor(m => Model.Alimentacion)</span>
                                    </strong>
                                    @string.Format("{0}", Model.Alimentacion ? "SI" : "NO")
                                </div>
                                <div class="input-field col s12 m8 l13">
                                    <strong>
                                        <span>@Html.DisplayNameFor(m => Model.Pasajes)</span>
                                    </strong>
                                    @string.Format("{0}", Model.Pasajes ? "SI" : "NO")
                                </div>
                                <div class="input-field col s12 m10 l10">
                                    <strong>
                                        <span>@Html.DisplayNameFor(m => Model.SolicitaViatico)</span>
                                    </strong>
                                    @string.Format("{0}", Model.SolicitaViatico ? "SI" : "NO")
                                </div>
                                <div class="input-field col s12 m10 l10">
                                    <strong>
                                        <span>@Html.DisplayNameFor(m => Model.ReqPasajeAereo)</span>
                                    </strong>
                                    @string.Format("{0}", Model.ReqPasajeAereo ? "SI" : "NO")
                                </div>
                                <div class="input-field col s12 m10 l10">
                                    <strong>
                                        <span>@Html.DisplayNameFor(m => Model.ReqPasajeTerrestre)</span>
                                    </strong>
                                    @string.Format("{0}", Model.ReqPasajeTerrestre ? "SI" : "NO")
                                </div>
                                <div id="divReembolso">
                                    <div class="input-field col s12 m10 l10">
                                        <strong>
                                            <span>@Html.DisplayNameFor(m => Model.SolicitaReembolso)</span>
                                        </strong>
                                        @string.Format("{0}", Model.SolicitaReembolso ? "SI" : "NO")
                                    </div>
                                </div>
                                <div class="input-field col s12 m4 l4">
                                    <strong>
                                        <span>@Html.DisplayNameFor(m => Model.Vehiculo)</span>
                                    </strong>
                                    @string.Format("{0}", Model.Vehiculo ? "SI" : "NO")
                                </div>
                                <div class="input-field col s12 m4 l4">
                                    <strong>
                                        @Html.DisplayNameFor(m => Model.TipoVehiculoDescripcion)
                                    </strong>
                                    @Html.DisplayFor(m => Model.TipoVehiculoDescripcion)
                                </div>
                                <div class="input-field col s12 m4 l4">
                                    <strong>
                                        @Html.DisplayNameFor(m => Model.PlacaVehiculo)
                                    </strong>
                                    @Html.DisplayFor(m => Model.PlacaVehiculo)
                                </div>
                            </div>

                            <h3><span style="font-weight: bold">III. Datos del Cometido: </span></h3>
                            <div class="row">
                                <div class="input-field col s12 m10 l10">
                                    @Html.DisplayFor(m => Model.ComisionDescripcion)
                                    @Html.LabelFor(m => Model.ComisionDescripcion)
                                    @Html.ValidationMessageFor(m => Model.ComisionDescripcion, "", new { @class = "red-text" })
                                </div>
                                <div class="input-field col s12 m10 l10">
                                    <span class="card-title">Destinos</span>
                                </div>
                                @if (Model.DestinosComision.Count > 0)
                                {
                                    <table class="table">
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.DestinosComision.FirstOrDefault().PaisDescripcion)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.DestinosComision.FirstOrDefault().CiudadDescripcion)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.DestinosComision.FirstOrDefault().FechaInicio)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.DestinosComision.FirstOrDefault().FechaHasta)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(m => Model.DestinosComision.FirstOrDefault().Dias100)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(m => Model.DestinosComision.FirstOrDefault().Dias60)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(m => Model.DestinosComision.FirstOrDefault().Dias40)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(m => Model.DestinosComision.FirstOrDefault().Dias00)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(m => Model.DestinosComision.FirstOrDefault().Dias50)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(m => Model.DestinosComision.FirstOrDefault().Total)
                                            </th>
                                            <th></th>
                                        </tr>
                                        @for (int i = 0; i < Model.DestinosComision.ToArray().Length; i++)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(m => Model.DestinosComision.ToArray()[i].PaisDescripcion)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => Model.DestinosComision.ToArray()[i].CiudadDescripcion)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => Model.DestinosComision.ToArray()[i].FechaInicio)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => Model.DestinosComision.ToArray()[i].FechaHasta)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => Model.DestinosComision.ToArray()[i].Dias100)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => Model.DestinosComision.ToArray()[i].Dias60)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => Model.DestinosComision.ToArray()[i].Dias40)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => Model.DestinosComision.ToArray()[i].Dias00)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => Model.DestinosComision.ToArray()[i].Dias50)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => Model.DestinosComision.ToArray()[i].Total)
                                                </td>
                                            </tr>
                                        }
                                    </table>

                                }
                            </div>
                        </div>
                        <div class="section"></div>
                        <p>
                            @*@Html.ActionLink("Crear Documento", "Create", "Documento", new { ProcesoId = Model.ProcesoId, WorkflowId = Model.WorkflowId },null)*@
                            @*@Html.ActionLink("Crear Documento", "GeneraDocumento", "Cometido", new { Id = Model.ComisionesId }, null)*@
                        </p>
                    </div>
                </div>
            </div>
            <div class="col s12 m6 l4">
                @Html.Action("Documents", "Workflow", new { Model.WorkflowId })
                @Html.Action("History", "Workflow", new { Model.WorkflowId })
            </div>
        </div>
    </div>

@Html.Action("Footer", "Workflow", new { Model.WorkflowId })

<script type="text/javascript">
    $(document).ready(function () {
        $('.datepicker').datepicker();
        $('select').formSelect();
        $('input:hidden').each(function (index, element) {
            $(element).appendTo($(element).parent());
        });
        $('#divReembolso').hide(100); //oculta checkbox de reembolso
    });

    $(function () {
        $("#jQuery_accordion").accordion({
            collapsible: true, heightStyle: true
        });
    });
</script>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<link href="~/Content/jquery-ui-git.css" rel="stylesheet" />

<link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/jquery.datetimepicker.full.min.js"></script>
