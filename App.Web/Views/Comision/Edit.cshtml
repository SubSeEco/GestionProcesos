            @Html.HiddenFor(q => Model.IdCargo)
            @Html.HiddenFor(q => Model.IdUnidad)
            @Html.HiddenFor(q => Model.IdCargo)
            @Html.HiddenFor(q => Model.IdCalidad)
            @Html.HiddenFor(q => Model.IdGrado)
