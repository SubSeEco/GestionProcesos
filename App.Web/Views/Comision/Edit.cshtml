                            </div>
                            <div class="input-field col s12 m10 l10">
                                @Html.DisplayFor(m => Model.Nombre)
                                @Html.LabelFor(m => Model.Nombre)
                                @Html.ValidationMessageFor(m => Model.Nombre, "", new { @class = "red-text" })
                            </div>
                            <div class="input-field col s12 m6 l8">
                                @Html.DisplayFor(m => Model.Rut)
                                @Html.LabelFor(m => Model.Rut)
                                @Html.ValidationMessageFor(m => Model.Rut, "", new { @class = "red-text" })
                            </div>
                            <div class="input-field col s12 m6 l4">
                                @Html.DisplayFor(m => Model.DV)
                                @Html.LabelFor(m => Model.DV)
                                @Html.ValidationMessageFor(m => Model.DV, "", new { @class = "red-text" })
                            </div>
                            <div class="input-field col s12 m6 l3">
                                @Html.DisplayFor(m => Model.CargoDescripcion)
                                @Html.LabelFor(m => Model.CargoDescripcion)
                                @Html.ValidationMessageFor(m => Model.CargoDescripcion, "", new { @class = "red-text" })
                            </div>
                            <div class="input-field col s12 m6 l3">
                                @Html.DisplayFor(m => Model.CalidadDescripcion)
                                @Html.LabelFor(m => Model.CalidadDescripcion)
                                @Html.ValidationMessageFor(m => Model.CalidadDescripcion, "", new { @class = "red-text" })
                            </div>
                            <div class="input-field col s12 m6 l3">
                                @Html.DisplayFor(m => Model.GradoDescripcion)
                                @Html.LabelFor(m => Model.GradoDescripcion)
                                @Html.ValidationMessageFor(m => Model.GradoDescripcion, "", new { @class = "red-text" })
                            </div>
                            <div class="input-field col s12 m6 l3">
                                @Html.DisplayFor(m => Model.EstamentoDescripcion)
                                @Html.LabelFor(m => Model.EstamentoDescripcion)
                                @Html.ValidationMessageFor(m => Model.EstamentoDescripcion, "", new { @class = "red-text" })
                            </div>
                            <div class="input-field col s12 m6 l3">
                                @Html.DisplayFor(m => Model.ProgramaDescripcion)
                                @Html.LabelFor(m => Model.ProgramaDescripcion)
                                @Html.ValidationMessageFor(m => Model.ProgramaDescripcion, "", new { @class = "red-text" })
                            </div>
                            <div class="input-field col s12 m6 l3">
                                @Html.DisplayFor(m => Model.ConglomeradoDescripcion)
                                @Html.LabelFor(m => Model.ConglomeradoDescripcion)
                                @Html.ValidationMessageFor(m => Model.ConglomeradoDescripcion, "", new { @class = "red-text" })
                            </div>
                        </div>
                        @*<div class="section"></div>*@
