                            <div class="input-field col s12 m8 l12">
                                <div class="row">
                                    <span>@Html.LabelFor(m => Model.FinanciaOrganismo)</span><br />
                                    <label>
                                        @Html.RadioButtonFor(m => Model.FinanciaOrganismo, true)
                                        <span>SI</span>
                                    </label>
                                    <label>
                                        @Html.RadioButtonFor(m => Model.FinanciaOrganismo, false)
                                        <span>NO</span>
                                    </label>
                                </div>
                            </div>
                            <div id="Financia" class="input-field col s12 m4 l10">
                                <div class="input-field col s12 m8 l12">
                                    <label style="color:green">
                                        @Html.Raw("<span>“Marque las opciones que SI financia el organismo invitante” </span>")
                                    </label>
                                </div>
                                <div class="input-field col s12 m8 l13">
                                    <label>
                                        @Html.CheckBoxFor(m => Model.Alojamiento, new { @disabled = "disabled" })
                                        <span>@Html.LabelFor(m => Model.Alojamiento)</span>
                                    </label>
                                    <div class="section"></div>
                                </div>
                                <div class="input-field col s12 m8 l13">
                                    <label>
                                        @Html.CheckBoxFor(m => Model.Alimentacion, new { @disabled = "disabled" })
                                        <span>@Html.LabelFor(m => Model.Alimentacion)</span>
                                    </label>
                                    <div class="section"></div>
                                </div>
                                <div class="input-field col s12 m8 l13">
                                    <label>
                                        @Html.CheckBoxFor(m => Model.Pasajes, new { @disabled = "disabled" })
                                        <span>@Html.LabelFor(m => Model.Pasajes)</span>
                                    </label>
                                    <div class="section"></div>
                                </div>
                            </div>
                            <div class="input-field col s12 m10 l10">
                                <label>
                                    @Html.CheckBoxFor(m => Model.SolicitaViatico)
                                    <span>@Html.LabelFor(m => Model.SolicitaViatico)</span>
                                </label>
                                <div class="section"></div>
                            </div>
                            <div class="input-field col s12 m10 l10">
                                <label>
                                    @Html.CheckBoxFor(m => Model.ReqPasajeAereo)
                                    <span>@Html.LabelFor(m => Model.ReqPasajeAereo)</span>
                                </label>
                                <div class="section"></div>
                            </div>
                            <div class="input-field col s12 m10 l10">
                                <label>
                                    @Html.CheckBoxFor(m => Model.ReqPasajeTerrestre)
                                    <span>@Html.LabelFor(m => Model.ReqPasajeTerrestre)</span>
                                </label>
                                <div class="section"></div>
                            </div>
                            <div id="divReembolso">
                                <div class="input-field col s12 m4 l3">
                                    <label>
                                        @Html.CheckBoxFor(m => Model.SolicitaReembolso)
                                        <span>@Html.LabelFor(m => Model.SolicitaReembolso)</span>
                                    </label>
                                    <div class="section"></div>
                                </div>
                            </div>
                            <div class="input-field col s12 m4 l3">
                                <label>
                                    @Html.CheckBoxFor(m => Model.Vehiculo)
                                    <span>@Html.LabelFor(m => Model.Vehiculo)</span>
                                </label>
                                <div class="section"></div>
                            </div>
                            <div class="input-field col s12 m6 l10">
                                @Html.DropDownListFor(m => Model.TipoVehiculoId, null, "Seleccione...")
                                @Html.LabelFor(m => Model.TipoVehiculoId)
                                @Html.ValidationMessageFor(m => Model.TipoVehiculoId, "", new { @class = "red-text" })
                            </div>
                            <div class="input-field col s12 m2 l10">
                                @Html.TextBoxFor(m => Model.PlacaVehiculo)
