@model App.Model.Cometido.Viatico
<div class="container">

    <h3>Editar Viatico</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(q => Model.ViaticoId)

        <div class="card">
            <div class="card-content">
                @*<span class="card-title">Crear nuevo</span>*@
                <div class="row">
                    <div class="input-field col s12 m10 l10">
                        @Html.TextBoxFor(m => Model.Rango1)
                        @Html.LabelFor(m => Model.Rango1)
                        @Html.ValidationMessageFor(m => Model.Rango1, "", new { @class = "red-text" })
                    </div>
                    <div class="input-field col s12 m10 l10">
                        @Html.TextBoxFor(m => Model.Rango2)
                        @Html.LabelFor(m => Model.Rango2)
                        @Html.ValidationMessageFor(m => Model.Rango2, "", new { @class = "red-text" })
                    </div>
                    <div class="input-field col s12 m10 l10">
                        @Html.TextBoxFor(m => Model.Rango3)
                        @Html.LabelFor(m => Model.Rango3)
                        @Html.ValidationMessageFor(m => Model.Rango3, "", new { @class = "red-text" })
                    </div>
                    <div class="input-field col s12 m10 l10">
                        @Html.TextBoxFor(m => Model.Rango4)
                        @Html.LabelFor(m => Model.Rango4)
                        @Html.ValidationMessageFor(m => Model.Rango4, "", new { @class = "red-text" })
                    </div>
                    <div class="input-field col s12 m10 l10">
                        @Html.TextBoxFor(m => Model.Rango5)
                        @Html.LabelFor(m => Model.Rango5)
                        @Html.ValidationMessageFor(m => Model.Rango5, "", new { @class = "red-text" })
                    </div>
                    <div class="input-field col s12 m10 l10">
                        @Html.TextBoxFor(m => Model.Año)
                        @Html.LabelFor(m => Model.Año)
                        @Html.ValidationMessageFor(m => Model.Año, "", new { @class = "red-text" })
                    </div>
                    <div class="input-field col s12 m10 l10">
                        <label>
                            @Html.CheckBoxFor(m => m.Activo)
                            <span>@Html.LabelFor(m => Model.Activo)</span>
                        </label>
                    </div>
                    <button class="waves-effect waves-light btn blue" type="submit">Aceptar</button>
                </div>
            </div>
        </div>
    }
</div>
<div class="fixed-action-btn">
    <a href="javascript:history.back()" class="btn-floating btn-large grey"><i class="large material-icons">chevron_left</i></a>
</div>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('input:hidden').each(function (index, element) {
            $(element).appendTo($(element).parent());
        });
    });
</script>
