@model App.Model.Cometido.ViaticoHonorario

<h3>Editar Viatico Honorario </h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(q => Model.ViaticoHonorarioId)

    <div class="card">
        <div class="card-content">
            <span class="card-title">Crear nuevo</span>
            <div class="row">
                <div class="input-field col s12 m10 l10">
                    @Html.TextBoxFor(m => Model.Año)
                    @Html.LabelFor(m => Model.Año)
                    @Html.ValidationMessageFor(m => Model.Año, "", new { @class = "red-text" })
                </div>
                <div class="input-field col s12 m10 l10">
                    @Html.TextBoxFor(m => Model.Desde)
                    @Html.LabelFor(m => Model.Desde)
                    @Html.ValidationMessageFor(m => Model.Desde, "", new { @class = "red-text" })
                </div>
                <div class="input-field col s12 m10 l10">
                    @Html.TextBoxFor(m => Model.Hasta)
                    @Html.LabelFor(m => Model.Hasta)
                    @Html.ValidationMessageFor(m => Model.Hasta, "", new { @class = "red-text" })
                </div>
                <div class="input-field col s12 m10 l10">
                    @Html.TextBoxFor(m => Model.Porcentaje100)
                    @Html.LabelFor(m => Model.Porcentaje100)
                    @Html.ValidationMessageFor(m => Model.Porcentaje100, "", new { @class = "red-text" })
                </div>
                <div class="input-field col s12 m10 l10">
                    @Html.TextBoxFor(m => Model.Porcentaje60)
                    @Html.LabelFor(m => Model.Porcentaje60)
                    @Html.ValidationMessageFor(m => Model.Porcentaje60, "", new { @class = "red-text" })
                </div>
                <div class="input-field col s12 m10 l10">
                    @Html.TextBoxFor(m => Model.Porcentaje40)
                    @Html.LabelFor(m => Model.Porcentaje40)
                    @Html.ValidationMessageFor(m => Model.Porcentaje40, "", new { @class = "red-text" })
                </div>
                <div class="input-field col s12 m10 l10">
                    @Html.TextBoxFor(m => Model.Porcentaje50)
                    @Html.LabelFor(m => Model.Porcentaje50)
                    @Html.ValidationMessageFor(m => Model.Porcentaje50, "", new { @class = "red-text" })
                </div>
                <div class="input-field col s12 m10 l10">
                    @Html.TextBoxFor(m => Model.Tramo)
                    @Html.LabelFor(m => Model.Tramo)
                    @Html.ValidationMessageFor(m => Model.Tramo, "", new { @class = "red-text" })
                </div>
                <div class="input-field col s12 m10 l10">
                    <label>
                        @Html.CheckBoxFor(m => m.Activo)
                        <span>@Html.LabelFor(m => Model.Activo)</span>
                    </label>
                </div>
            </div>
            <button class="waves-effect waves-light btn blue" type="submit">Aceptar</button>
        </div>
    </div>
}
<div class="fixed-action-btn">
    <a href="javascript:history.back()" class="btn-floating btn-large grey"><i class="large material-icons">chevron_left</i></a>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
