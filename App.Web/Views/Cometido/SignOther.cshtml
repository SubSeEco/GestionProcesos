                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => item.DocumentoId)
                                <button class="waves-effect waves-light btn blue" type="submit">Aceptar</button>
                            }
                        </div>

                        <div class="modal-footer">
