                        <li>
                            <div class="collapsible-header"><span style="font-weight: bold">III. Datos del Cometido: </span></div>
                            <div class="collapsible-body">
                                <div class="row">
                                    <div class="input-field col s12 m10 l10">
                                        @Html.EditorFor(m => Model.NombreCometido, new { htmlAttributes = new { @readonly = "readonly" } })
                                        @Html.LabelFor(m => Model.NombreCometido)
                                        @Html.ValidationMessageFor(m => Model.NombreCometido, "", new { @class = "red-text" })
                                    </div>
                                    <div class="input-field col s12 m10 l10">
                                        @Html.EditorFor(m => Model.CometidoDescripcion, new { htmlAttributes = new { @class = "materialize-textarea", @readonly = "readonly" } })
                                        @Html.LabelFor(m => Model.CometidoDescripcion)
                                        @Html.ValidationMessageFor(m => Model.CometidoDescripcion, "", new { @class = "red-text" })
                                    </div>
                                    <div class="input-field col s12 m10 l10">
                                        <span class="card-title">Destinos</span>
                                    </div>
                                </div>
                                @if (Model.Destinos.Count > 0)
                                {
                                    <div class="row">
                                        <table id="tablaModal">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Destinos.FirstOrDefault().RegionDescripcion)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Destinos.FirstOrDefault().ComunaDescripcion)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Destinos.FirstOrDefault().NombreLocalidad)
                                                    </th>
                                                    <th>Detalle</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            @for (int i = 0; i < Model.Destinos.ToArray().Length; i++)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(m => Model.Destinos.ToArray()[i].RegionDescripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(m => Model.Destinos.ToArray()[i].ComunaDescripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(m => Model.Destinos.ToArray()[i].NombreLocalidad)
                                                    </td>
                                                    <td>
                                                        <a href='#modalTabla-@Model.Destinos.ToArray()[i].DestinoId' class="details btn-large btn-floating modal-trigger tooltipped blue" data-tooltip="Ver Detalles"><i class="medium material-icons">visibility</i></a>
                                                        <div id="modalTabla-@Model.Destinos.ToArray()[i].DestinoId" class="modal">
                                                            <div class="modal-footer">
                                                                <a class="modal-close btn-medium btn-floating modal-trigger tooltipped materialize-red" data-tooltip="Cerrar Ventana"><i class="tiny material-icons">close</i></a>
                                                            </div>
                                                            <div class="modal-content">
                                                                <h3 style="text-align:center">Detalles Destino - @Model.Destinos.ToArray()[i].DestinoId</h3>
                                                                <table class="striped centered">
                                                                    <tr>
                                                                        <td>
                                                                            @Html.DisplayNameFor(modelItem => Model.Destinos.ToArray()[i].FechaInicio)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayNameFor(modelItem => Model.Destinos.ToArray()[i].FechaHasta)
                                                                        </td>
                                                                        <td>
                                                                            @Html.Raw("<span>%</span>")
                                                                        </td>
                                                                        <td>
                                                                            @Html.Raw("<span>Días 100 %</span>")
                                                                        </td>
                                                                        <td>
                                                                            @Html.Raw("<span>Días 60 %</span>")
                                                                        </td>
                                                                        <td>
                                                                            @Html.Raw("<span>Días 40 %</span>")
                                                                        </td>
                                                                        <td>
                                                                            @Html.Raw("<span>Días 50 %</span>")
                                                                        </td>
                                                                        <td>
                                                                            @Html.Raw("<span>Días 00 %</span>")
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].FechaInicio)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].FechaHasta)
                                                                        </td>
                                                                        <td>
                                                                            @Html.Raw("<span>Solicitados</span>")
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias100)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias60)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias40)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias50)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias00)
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td></td>
                                                                        <td></td>
                                                                        <td>
                                                                            @Html.Raw("<span>Aprobados</span>")
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias100Aprobados)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias60Aprobados)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias40Aprobados)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias50Aprobados)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias00Aprobados)
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td></td>
                                                                        <td></td>
                                                                        <td>
                                                                            @Html.Raw("<span>Monto</span>")
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias100Monto)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias60Monto)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias40Monto)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias50Monto)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => Model.Destinos.ToArray()[i].Dias00Monto)
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td></td>
                                                                        <td></td>
                                                                        <td>
                                                                            @Html.Raw("<span>TOTAL</span>")
                                                                        </td>
                                                                        <td></td>
                                                                        <td></td>
                                                                        <td></td>
                                                                        <td>
                                                                            @Html.DisplayFor(m => Model.Destinos.ToArray()[i].Total)
                                                                        </td>
                                                                    </tr>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </table>
                                    </div>                                    
                                }
                            </div>
                        </li>
                        <li>
                            @if (Model.Atrasado)
                            {
                                <div class="collapsible-header">
                                    <span style="font-weight: bold">IV. Justificación de Atraso</span>
                                </div>
                                <div class="collapsible-body">
                                    <div class="row">
                                        <div class="input-field col s12 m10 l12">
                                            <strong>@Html.NameFor(m => Model.JustificacionAtraso)</strong>
                                            <h5>@Html.DisplayTextFor(m => Model.JustificacionAtraso)</h5>
                                        </div>
                                    </div>
                                </div>
                            }
                        </li>
                        <!--se agregan datos de pasajes si se solicitan-->
                        @if (Model.ReqPasajeAereo)
                        {
                            <li>
                                <div class="collapsible-header">
                                    @if (Model.Atrasado)
                                    {
                                        <span style="font-weight: bold;height:inherit">V. Datos del Pasaje: </span>
                                    }
                                    else
                                    {
                                        <span style="font-weight: bold;height:inherit">IV. Datos del Pasaje: </span>
                                    }
                                </div>
                                <div class="collapsible-body">
                                    @if (ViewBag.DestinosPasajes != null)
                                    {
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Región de origen</th>
                                                    <th>Fecha de origen</th>
                                                    <th>Región de retorno</th>
                                                    <th>Fecha retorno</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var destinopasaje in ViewBag.DestinosPasajes)
                                                {
                                                    <tr>
                                                        <td>
                                                            @destinopasaje.OrigenRegionDescripcion
                                                            <br />
                                                            @destinopasaje.ObservacionesOrigen
                                                        </td>
                                                        <td>@destinopasaje.FechaOrigen</td>
                                                        <td>
                                                            @destinopasaje.RegionDescripcion @destinopasaje.PaisDescripcion <br />
                                                            @destinopasaje.ObservacionesDestinos
                                                        </td>
                                                        <td>@destinopasaje.FechaVuelta</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                </div>
                            </li>

                        }
                    </ul>                    
                    <div class="section"></div>
                    @*@if (/*Model.Proceso.Anulada != true ||*/ Model.Proceso.Terminada != true)*@
                    @if (/*Model.Proceso.Anulada != true ||*/ Model.Proceso.EstadoProcesoId != (int)Enum.EstadoProceso.Terminado && Model.Workflow.DefinicionWorkflowId == (int)Enum.DefinicionWorkflow.SolicitudCometido)
                    {
                        <a href='@Url.Action("Delete","Proceso", new { id = Model.Proceso.ProcesoId })' class="btn red">Anular Cometido</a>
                    }
                    //else if (Model.Proceso.Terminada == true && Model.Proceso.EstadoProcesoId == 3)
                    else if (Model.Proceso.EstadoProcesoId == (int)Enum.EstadoProceso.Terminado)
                    {
                        @*<a href='@Url.Action("Delete","Proceso", new { id = Model.Proceso.ProcesoId })' class="btn blue-gradient-button">Adjuntar Archivo</a>*@
                        /*Se cambia forma de anular un proceso terminado*/
                        @*<div class="row">
                                <a href="#modalCreate" class="btn-floating modal-trigger btn-large blue tooltipped" data-position="left" data-tooltip="Adjuntar archivo"><i class="large material-icons">attach_file</i></a>
                                @Html.Raw("<span>Adjuntar Archivo</span>")
                            </div>*@
                        <div class="section"></div>
                        <p>
                            @Html.ActionLink("Reiniciar Proceso", "Reiniciar", "Cometido", new { CometidoId = Model.CometidoId }, new { @class = "waves-effect waves-light btn blue" })
                        </p>
                    }
                </div>
            </div>
        </div>
        <div class="col s12 m6 l4">
            @Html.Action("Documents", "Workflow", new { Model.WorkflowId })
            @Html.Action("History", "Workflow", new { Model.WorkflowId })
        </div>
    </div>
</div>
<div class="fixed-action-btn">
    <a href="javascript:history.back()" class="btn-floating btn-large grey"><i class="large material-icons">chevron_left</i></a>
</div>

