@model IEnumerable<App.Model.Cometido.TipoPartida>

<h3>Tipo Partida</h3>
<div class="card">
    <div class="card-content">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TipoPartidaId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TpaNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TpaActivo)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoPartidaId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TpaNombre)
                    </td>
                    <td>
                        @if (item.TpaActivo)
                        {
                            <p>True</p>
                        }
                        else
                        {
                            <p>False</p>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Detalles", "Details", new { id = item.TipoPartidaId })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<div class="fixed-action-btn">
    <a href='@Url.Action("Create")' class="btn-floating btn-large blue tooltipped" data-position="left" data-delay="500" data-tooltip="Agregar nuevo elemento"><i class="large material-icons">add</i></a>
</div>
