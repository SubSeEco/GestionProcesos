@model App.Model.CDP.CDP

@Html.Action("Header", "Workflow", new { Model.WorkflowId })

<div class="row">
    <div class="col s12 m6 l3">
        @using (Html.BeginForm("Create", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(q => Model.WorkflowId)
            @Html.HiddenFor(q => Model.ProcesoId)
            @Html.HiddenFor(q => Model.EmailSolicitante)
            @Html.AntiForgeryToken()

            <div class="card">
                <div class="card-content">
                    <span class="card-title">CDP</span>
                    <div class="section"></div>
                    <div class="row">
                        <div class="input-field col s12 m10 l10">
                            @Html.TextBoxFor(m => Model.Solicitante, new { @placeholder = "Ingrese nombres o email" })
                            @Html.LabelFor(m => Model.Solicitante)
                            @Html.ValidationMessageFor(m => Model.Solicitante, "", new { @class = "red-text" })
                        </div>

                        <div class="input-field col s12 m10 l10">
                            @Html.DropDownListFor(m => Model.InstitucionId, null, "Seleccione...")
                            @Html.LabelFor(m => Model.InstitucionId)
                            @Html.ValidationMessageFor(m => Model.InstitucionId, "", new { @class = "red-text" })
                        </div>
                        <div class="input-field col s12 m10 l10">
                            @Html.DropDownListFor(m => Model.CDPTipoSolicitudId, null, "Seleccione...")
                            @Html.LabelFor(m => Model.CDPTipoSolicitudId)
                            @Html.ValidationMessageFor(m => Model.CDPTipoSolicitudId, "", new { @class = "red-text" })
                        </div>
                        <div class="input-field col s12 m10 l10">
                            @Html.DropDownListFor(m => Model.CDPBienId, null, "Seleccione...")
                            @Html.LabelFor(m => Model.CDPBienId)
                            @Html.ValidationMessageFor(m => Model.CDPBienId, "", new { @class = "red-text" })
                        </div>
                        <div class="input-field col s12 m10 l10">
                            @Html.DropDownListFor(m => Model.RegionId, null, "Seleccione...")
                            @Html.LabelFor(m => Model.RegionId)
                            @Html.ValidationMessageFor(m => Model.RegionId, "", new { @class = "red-text" })
                        </div>
                        <div class="input-field col s12 m10 l10">
                            @Html.EditorFor(m => Model.FechaSolicitud)
                            @Html.LabelFor(m => Model.FechaSolicitud)
                            @Html.ValidationMessageFor(m => Model.FechaSolicitud, "", new { @class = "red-text" })
                        </div>
                        <div class="input-field col s12 m10 l10">
                            @Html.EditorFor(m => Model.Monto)
                            @Html.LabelFor(m => Model.Monto)
                            @Html.ValidationMessageFor(m => Model.Monto, "", new { @class = "red-text" })
                        </div>
                        <div class="input-field col s12 m10 l10">
                            @Html.LabelFor(m => Model.Detalle)
                            @Html.TextAreaFor(m => Model.Detalle, new { @class = "materialize-textarea" })
                            @Html.ValidationMessageFor(m => Model.Detalle, "", new { @class = "red-text" })
                        </div>
                    </div>
                    <p>
                        <button class="waves-effect waves-light btn blue" type="submit">Guardar</button>
                    </p>
                </div>
            </div>
        }
    </div>
    <div class="col s12 m6 l3">
        @Html.Action("Documents", "Workflow", new { Model.WorkflowId })
        @Html.Action("History", "Workflow", new { Model.WorkflowId })
    </div>
</div>

@Html.Action("Footer", "Workflow", new { Model.WorkflowId })

<script type="text/javascript">
    $(document).ready(function () {
        $('.datepicker').datepicker();
        $('select').formSelect();
        $('input:hidden').each(function (index, element) {
            $(element).appendTo($(element).parent());
        });

        $("#Solicitante").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Contrato/GetUser/",
                    data: { term: request.term },
                    type: "POST",
                    success: function (data) {
                        response($.map(data,
                            function (item) {
                                return { id: item.id, value: item.value };
                            }));
                    }
                });
            },

            select: function (event, ui) {
                $("#Solicitante").val(ui.item.value);
                $("#EmailSolicitante").val(ui.item.id);
                return false;
            }
        });
    });
</script>

