@model App.Model.Comisiones.ParrafoComisiones
<div class="container">
    <h3>Editar Parrafo</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(q => Model.ParrafoComisionesId)

        <div class="card">
            <div class="card-content">
                @*<span class="card-title">Crear nuevo</span>*@
                <div class="row">
                    <div class="input-field col s12 m10 l10">
                        @Html.TextBoxFor(m => Model.ParrafoTexto)
                        @Html.LabelFor(m => Model.ParrafoTexto)
                        @Html.ValidationMessageFor(m => Model.ParrafoTexto, "", new { @class = "red-text" })
                    </div>
                    <div class="input-field col s12 m10 l10">
                        <label>
                            @Html.CheckBoxFor(m => m.ParrafoActivo)
                            <span>@Html.LabelFor(m => Model.ParrafoActivo)</span>
                        </label>
                    </div>
                </div>
                <button class="waves-effect waves-light btn blue" type="submit">Aceptar</button>
            </div>
        </div>
    }
</div>
<div class="fixed-action-btn">
    <a href="javascript:history.back()" class="btn-floating btn-large grey"><i class="large material-icons">chevron_left</i></a>
</div>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('input:hidden').each(function (index, element) {
            $(element).appendTo($(element).parent());
        });
    });
</script>
