@model App.Model.SIAC.SIACSolicitud
@{
    Layout = null;
}
@Html.HiddenFor(q => q.WorkflowId)

<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/materialize.css">
</head>
<body>
    <div class="row">
        <div class="left">
            .<img src="http://cdc.economia.cl/Styles/images/logo_gobierno_membrete.png" width="170px" />
        </div>
        <div class="right">
            <img src="data:image;base64,@System.Convert.ToBase64String(Model.QR)" width="170px" />
        </div>
    </div>

    <center>
        <p class="flow-text">
            <h5><b>INFORME DE DESEMPEÑO Y AUTORIZACION DE PAGO <br />PERSONAL CONTRATADO A HONORARIOS A SUMA ALZADA</b></h5>
        </p>
        <p class="flow-text">
            Desde el @Html.DisplayFor(m => Model.FechaDesde) y el @Html.DisplayFor(m => Model.FechaHasta)
        </p>
    </center>

    <p class="flow-text">
        <b>I. ANTECEDENTES PERSONALES</b>
        <table>
            <tbody>
                <tr>
                    <td width="250"><b>@Html.DisplayNameFor(m => Model.Nombre)</b></td>
                    <td>@Html.DisplayFor(m => Model.Nombre)</td>
                </tr>
                <tr>
                    <td width="250"><b>@Html.DisplayNameFor(m => Model.RUT)</b></td>
                    <td> @Html.DisplayFor(m => Model.RUT)</td>
                </tr>
                <tr>
                    <td width="250"><b>@Html.DisplayNameFor(m => Model.Unidad)</b></td>
                    <td>  @Html.DisplayFor(m => Model.Unidad)</td>
                </tr>
                <tr>
                    <td width="250"><b>@Html.DisplayNameFor(m => Model.NombreJefatura)</b></td>
                    <td> @Html.DisplayFor(m => Model.NombreJefatura)</td>
                </tr>
                <tr>
                    <td width="250"><b>@Html.DisplayNameFor(m => Model.ConJornada)</b></td>
                    <td> @string.Format("{0}", Model.ConJornada ? "CON JORNADA" : "SIN JORNADA")</td>
                </tr>
            </tbody>
        </table>
    </p>
    <p class="flow-text"><b>II. PRODUCTO ESTABLECIDO EN EL CONTRATO</b></p>
    @if (!string.IsNullOrWhiteSpace(Model.Funciones))
    {
        <p class="flow-text">
            @Html.Raw(Model.Funciones.Replace(Environment.NewLine, "<br/>"))
        </p>
    }

    <p class="flow-text"><b>III. DESCRIPCION DEL PRODUCTO</b></p>
    @if (!string.IsNullOrWhiteSpace(Model.Actividades))
    {
        <p class="flow-text">
            @Html.Raw(Model.Actividades.Replace(Environment.NewLine, "<br/>"))
        </p>
    }

    <p class="flow-text"><b>IV. OBSERVACIONES</b></p>
    @if (!string.IsNullOrWhiteSpace(Model.Observaciones))
    {
        <p class="flow-text">
            @Html.Raw(Model.Observaciones.Replace(Environment.NewLine, "<br/>"))
        </p>
    }

    <p class="flow-text"><b>V. USO EXLUSIVO UNIDAD DE REMUNERACIONES</b></p>

    <table>
        <tbody>
            <tr>
                <td width="250"><b>@Html.DisplayNameFor(m => Model.NumeroBoleta)</b></td>
                <td>@Html.DisplayFor(m => Model.NumeroBoleta)</td>
            </tr>
            <tr>
                <td width="250"><b>@Html.DisplayNameFor(m => Model.FechaBoleta)</b></td>
                <td> @Html.DisplayFor(m => Model.FechaBoleta)</td>
            </tr>
        </tbody>
    </table>

    <div class="section"></div>
    <center>
        <img src="data:image;base64,@System.Convert.ToBase64String(Model.Signature)" />
    </center>
    <center>
        <p class="flow-text">
            @Model.Nombre
        </p>
    </center>

</body>
</html>