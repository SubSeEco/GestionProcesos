@model IEnumerable<App.Model.Comisiones.DestinosComision>

<div class="container">
    <h3>Destinos Comision</h3>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaHasta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaisDescripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CiudadDescripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dias100)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dias60)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dias40)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaHasta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaisDescripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CiudadDescripcion)
                </td>
