                    @Html.DisplayFor(modelItem => item.Dias100)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dias60)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dias40)
                </td>
                <td>
                    @*@Html.ActionLink("Detalles", "View", new { id = item.ComisionesId })*@
