@*@model App.Web.Controllers.RubricaController.FileUpload*@
@model App.Model.Core.Rubrica


<h3>Crear rúbrica</h3>
@using (Html.BeginForm("Create", null, FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(q => Model.RubricaId)
    @Html.HiddenFor(q => Model.Email)

    <div class="card">
        <div class="card-content">
            <div class="row">
                <div class="input-field col s12 m10 l10">
                    @Html.DropDownListFor(m => Model.Email, null, "Seleccione...")
                    @Html.LabelFor(m => Model.Email)
                    @Html.ValidationMessageFor(m => Model.Email, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m10 l10">
                    @Html.DropDownListFor(m => Model.IdentificadorFirma, null, "Seleccione...")
                    @Html.LabelFor(m => Model.IdentificadorFirma)
                    @Html.ValidationMessageFor(m => Model.IdentificadorFirma, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m4 l3">
                    <label>
                        @Html.CheckBoxFor(m => Model.HabilitadoFirma)
                        <span>@Html.LabelFor(m => Model.HabilitadoFirma)</span>
                    </label>
                    <div class="section"></div>
                </div>
            </div>
            <button class="waves-effect waves-light btn blue" type="submit">Aceptar</button>
        </div>
    </div>
}
<div class="fixed-action-btn">
    <a href="javascript:history.back()" class="btn-floating btn-large grey"><i class="large material-icons">chevron_left</i></a>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<link href="~/Content/jquery-ui-git.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {
        $("#Funcionario").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/CuentaRed/GetUser/",
                    data: { term: request.term },
                    type: "POST",
                    success: function (data) {
                        response($.map(data,
                            function (item) {
                                return { id: item.id, value: item.value };
                            }));
                    }
                });
            },

            select: function (event, ui) {
                $("#Funcionario").val(ui.item.value);
                $("#Email").val(ui.item.id);
                return false;
            }
        });

        $('select').formSelect();
        $('input:hidden').each(function (index, element) {
            $(element).appendTo($(element).parent());
        });

    });
</script>