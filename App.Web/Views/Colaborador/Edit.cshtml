@model App.Model.HorasExtras.Colaborador

<div class="container">
    <div class="row">
        <div class="col s12 m6 l12">
            @Html.Partial("_Message")

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(q => Model.ColaboradorId)
                @Html.HiddenFor(q => Model.HorasExtrasId)

                @Html.ValidationSummary(true, "", new { @class = "red-text" })
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Destinos Cometidos</span>
                        <div class="row">
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NombreId)
                                    </th>
                                    <th style="width:80px">
                                        @Html.DisplayNameFor(model => model.HDPago)
                                    </th>
                                    <th style="width:80px">
                                        @Html.DisplayNameFor(model => model.HDCompensar)
                                    </th>
                                    <th style="width:80px">
                                        @Html.DisplayNameFor(model => model.HNPago)
                                    </th>
                                    <th style="width:80px">
                                        @Html.DisplayNameFor(m => Model.HNCompensar)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(m => Model.Descripcion)
                                    </th>
                                    <th></th>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DropDownListFor(m => Model.NombreId, null, "Seleccione...")
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => Model.HDPago, new { style = "width:50px" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => Model.HDCompensar, new { style = "width:50px" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => Model.HNPago, new { style = "width:50px" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => Model.HNCompensar, new { style = "width:50px" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => Model.Descripcion)
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="section"></div>
                    <p>
                        <button class="waves-effect waves-light btn blue" type="submit">Guardar</button>
                    </p>
                </div>
            }
        </div>
    </div>
</div>
<div class="fixed-action-btn">
    <a href="javascript:history.back()" class="btn-floating btn-large grey"><i class="large material-icons">chevron_left</i></a>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('select').formSelect();        
    });    
</script>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery-ui.js"></script><link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/jquery.datetimepicker.full.min.js"></script>
