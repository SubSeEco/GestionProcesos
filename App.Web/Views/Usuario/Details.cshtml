@model App.Model.Core.Usuario
<h3>Detalle usuario</h3>
<div class="card">
    <div class="card-content">
        <div class="input-field col s12 m10">
            <strong>@Html.DisplayNameFor(m => Model.Nombre)</strong>
            <p>@Html.DisplayFor(m => Model.Nombre)</p>
        </div>
        <div class="input-field col s12 m10">
            <strong>@Html.DisplayNameFor(m => Model.Email)</strong>
            <p>@Html.DisplayFor(m => Model.Email)</p>
        </div>
        <div class="input-field col s12 m10">
            <strong>@Html.DisplayNameFor(m => Model.Grupo.Nombre)</strong>
            <p>@Html.DisplayFor(m => Model.Grupo.Nombre)</p>
        </div>
        <br />
        <a href='@Url.Action("Edit", new { id = Model.UsuarioId })' class="btn blue">Editar</a>
        <a href='@Url.Action("Delete", new { id = Model.UsuarioId })' class="btn red">Eliminar</a>

    </div>
</div>
<div class="fixed-action-btn">
    <a href="javascript:history.back()" class="btn-floating btn-large grey"><i class="large material-icons">chevron_left</i></a>
</div>