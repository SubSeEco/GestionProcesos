@model App.Model.Core.Usuario

@{
    ViewBag.Title = "Crear definición de proceso";
    ViewBag.SubTitle = "Crear definición de proceso";
}
<div class="grey lighten-3">
    <div class="section container ">
        <h3 class="header">@ViewBag.Title</h3>
        <h5 class="header light">@ViewBag.SubTitle</h5>
        <br />
    </div>
</div>
<div class="container">
    @Html.Partial("_Message")
    <div class="card">
        <div class="card-content">
            <span class="card-title">Confirmar eliminación</span>
            <div class="row">
                <div class="input-field col s12 m10">
                    <strong>@Html.DisplayNameFor(m => Model.Nombre)</strong>
                    <p>@Html.DisplayFor(m => Model.Nombre)</p>
                </div>
                <div class="input-field col s12 m10">
                    <strong>@Html.DisplayNameFor(m => Model.Email)</strong>
                    <p>@Html.DisplayFor(m => Model.Email)</p>
                </div>
                <div class="input-field col s12 m10">
                    <strong>@Html.DisplayNameFor(m => Model.Grupo.Nombre)</strong>
                    <p>@Html.DisplayFor(m => Model.Grupo.Nombre)</p>
                </div>
            </div>
            <br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(q => Model.UsuarioId)

                <button class="waves-effect waves-light btn red" type="submit">Confirmar eliminación</button>
            }
        </div>
    </div>
</div>
