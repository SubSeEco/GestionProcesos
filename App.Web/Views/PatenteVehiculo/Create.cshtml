@model App.Model.Cometido.PatenteVehiculo
@{
    Layout = null;
    ViewBag.Title = "Agregar Patente";
    ViewBag.SubTitle = "Agregar una patente según region y tipo de vehiculo";
}

<div class="grey lighten-3 section">
    <div class="container section">
        <h3 class="header">@ViewBag.Title</h3>
        <h5 class="header light">@ViewBag.SubTitle</h5>
        <div class="section"></div>
    </div>
</div>
<div class="container">
    @Html.Partial("_Message")
    @using (Html.BeginForm("Create", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="card">
            <div class="card-content">
                <div class="row">
                    <div class="input-field col s3">
                        @Html.EditorFor(m => Model.PlacaPatente)
                        @Html.LabelFor(m => Model.PlacaPatente)
                        @Html.ValidationMessageFor(m => Model.PlacaPatente, "", new { @class = "red-text" })
                    </div>
                    <div class="input-field col s9">
                        @Html.DropDownListFor(m => Model.Codigo, new SelectList(ViewBag.ListaRegion, "Value", "Text", Model.RegionId), "Seleccione...")
                        @Html.LabelFor(m => Model.Codigo)
                        @Html.ValidationMessageFor(m => Model.RegionId)
                    </div>
                    <div class="input-field col m12">
                        @Html.DropDownListFor(m => Model.SIGPERTipoVehiculoId, new SelectList(ViewBag.TipoVehiculo, "Value", "Text", Model.SIGPERTipoVehiculoId), "Seleccione...")
                        @Html.LabelFor(m => Model.SIGPERTipoVehiculoId)
                        @Html.ValidationMessageFor(m => Model.SIGPERTipoVehiculoId, "", new { @class = "red-text" })
                    </div>
                </div>
                <button class="waves-effect waves-light btn blue" type="submit">Agregar</button>
                <a class="modal-close waves-effect waves-light btn red" style="float:inline-end">Cancelar</a>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('.modal').modal();
        $('select').formSelect();
    });
</script>