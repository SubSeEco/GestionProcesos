@model App.Model.HorasExtras.HorasExtras

@Html.Action("Header", "Workflow", new { Model.WorkflowId })

<div class="container">

    @Html.Action("procesState", "HorasExtras", new { Model.WorkflowId })

    <div class="row">
        <div class="col s12 m6 l8">
            @Html.Partial("_Message")
            @using (Html.BeginForm("Edit", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(q => Model.WorkflowId)
                @Html.HiddenFor(q => Model.ProcesoId)
                @Html.HiddenFor(q => Model.HorasExtrasId)
                @Html.HiddenFor(q => Model.Annio)
                @Html.HiddenFor(q => Model.Mes)
                @Html.HiddenFor(q => Model.Nombre)
                @Html.HiddenFor(q => Model.NombreId)
                @Html.HiddenFor(q => Model.DV)
                @Html.HiddenFor(q => Model.NombreJefatura)
                @Html.HiddenFor(q => Model.jefaturaId)
                @Html.HiddenFor(q => Model.JefaturaDV)
                @Html.HiddenFor(q => Model.Unidad)
                @Html.HiddenFor(q => Model.UnidadId)
                @Html.HiddenFor(q => Model.MesBaseCalculo)


                @Html.ValidationSummary(true, "", new { @class = "red-text" })

                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <div class="input-field col s12 m10 l6">
                                <strong>
                                    @Html.DisplayNameFor(m => Model.HorasExtrasId)
                                </strong>
                                @Html.DisplayFor(m => Model.HorasExtrasId)

                            </div>
                        </div>
                        <div id="jQuery_accordion">
                            <h3><span style="font-weight: bold">Datos del Ingreso: </span></h3>
                            <div class="row">
                                <div class="col-12">
                                    <div class="input-field">
                                        <strong>@Html.DisplayNameFor(m => Model.FechaSolicitud)</strong>
                                        @Html.DisplayFor(m => Model.FechaSolicitud)
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-field">
                                        <strong>
                                            @Html.DisplayNameFor(m => Model.Nombre)
                                        </strong>
                                        @Html.DisplayFor(m => Model.Nombre)
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-field">
                                        <strong>
                                            @Html.DisplayNameFor(m => Model.NombreJefatura)
                                        </strong>
                                        @Html.DisplayFor(m => Model.NombreJefatura)
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-field">
                                        <strong>
                                            @Html.DisplayNameFor(m => Model.Unidad)
                                        </strong>
                                        @Html.DisplayFor(m => Model.Unidad)
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-field">
                                        <strong>@Html.DisplayNameFor(m => Model.Annio)</strong>
                                        @Html.DisplayFor(m => Model.Annio)
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-field">
                                        <strong>
                                            @Html.DisplayNameFor(m => Model.Mes)
                                        </strong>
                                        @Html.DisplayFor(m => Model.Mes)
                                    </div>
                                </div>
                            </div>
                            <h3><span style="font-weight: bold">Datos de las horas solicitadas: </span></h3>
                            <div class="row">
                                <div class="input-field col s12 m10 l10">
                                    <span class="card-title">Solicitudes</span>
                                </div>

                                @if (Model.Colaborador.Count > 0)
                                {
                                    <table class="table">
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Colaborador.FirstOrDefault().Nombre)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(m => Model.Colaborador.FirstOrDefault().Descripcion)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Colaborador.FirstOrDefault().HDPago)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Colaborador.FirstOrDefault().HDCompensar)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Colaborador.FirstOrDefault().HNPago)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(m => Model.Colaborador.FirstOrDefault().HNCompensar)
                                            </th>

                                            <th></th>
                                        </tr>
                                        @for (int i = 0; i < Model.Colaborador.ToArray().Length; i++)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(m => Model.Colaborador.ToArray()[i].Nombre)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => Model.Colaborador.ToArray()[i].Descripcion)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => Model.Colaborador.ToArray()[i].HDPago)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => Model.Colaborador.ToArray()[i].HDCompensar)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => Model.Colaborador.ToArray()[i].HNPago)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => Model.Colaborador.ToArray()[i].HNCompensar)
                                                </td>
                                                @if (Model.Workflow.DefinicionWorkflow.Secuencia != 10)
                                                {
                                                    <td>
                                                        @if (Model.Workflow.DefinicionWorkflow.Secuencia == 3 || Model.Workflow.DefinicionWorkflow.Secuencia == 4)
                                                        {
                                                            <a href='@Url.Action("EditGP", "Colaborador", new { id = Model.Colaborador.ToArray()[i].ColaboradorId})' class="btn-large btn-floating modal-trigger btn tooltipped blue" data-tooltip="Editar"><i class="large material-icons">edit</i></a>
                                                        }
                                                        else
                                                        {
                                                    <a href='@Url.Action("Edit", "Colaborador", new { id = Model.Colaborador.ToArray()[i].ColaboradorId})' class="btn-large btn-floating modal-trigger btn tooltipped blue" data-tooltip="Editar"><i class="large material-icons">edit</i></a>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a href='@Url.Action("Delete", "Colaborador", new { id = Model.Colaborador.ToArray()[i].ColaboradorId })' class="btn-large btn-floating modal-trigger btn tooltipped blue" data-tooltip="Eliminar"><i class="large material-icons">delete</i></a>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </table>

                                }

                                @if (Model.Workflow.DefinicionWorkflow.Secuencia != 10)
                                {
                                    <div class="section"></div>
                                    <a href='@Url.Action("Create","Colaborador", new { id = Model.HorasExtrasId})' class="btn-floating modal-trigger btn-large blue tooltipped" data-position="right" data-tooltip="Agregar destinos"><i class="large material-icons">add</i></a>
                                }
                            </div>
                        </div>
                        @if (Model.Workflow.DefinicionWorkflow.Secuencia == 4)
                        {
                            <div class="section"></div>
                            <div class="row">
                                @Html.ActionLink("Generar Resolucion de trabajos extraordinarios", "GeneraDocumento", "HorasExtras", new { Id = Model.HorasExtrasId }, null)
                            </div>
                        }

                        <div class="section"></div>
                        <p>
                            <button class="waves-effect waves-light btn blue" type="submit">Guardar</button>
                        </p>
                    </div>
                </div>
            }
        </div>
        <div class="col s12 m6 l4">
            @Html.Action("Documents", "Workflow", new { Model.WorkflowId })
            @Html.Action("History", "Workflow", new { Model.WorkflowId })
        </div>
    </div>
</div>

@Html.Action("Footer", "Workflow", new { Model.WorkflowId })

<script type="text/javascript">
    $(document).ready(function () {
        jQuery.datetimepicker.setLocale('es');
        jQuery('#FechaSolicitud').datepicker({
            i18n: {
                es: {
                    months: [
                        'Enero', 'Febrero', 'Marzo', 'Abril',
                        'Mayo', 'Junio', 'Julio', 'Agosto',
                        'Septiembre', 'Octubre', 'Noviembre', 'Diciembre',
                    ]
                }
            },
            todayButton: true,
            dayOfWeekStart: 1,
        });

        $('.modal').modal();
        $('.tooltipped').tooltip();
        $('select').formSelect();
        $('input:hidden').each(function (index, element) {
            $(element).appendTo($(element).parent());
        });

    });
    /*******************TERMINO METODO FUNCTION*************************************************************************************/
    $(function () {
        $("#jQuery_accordion").accordion({
            collapsible: true, heightStyle: true /*"auto"*/
        });
    });
</script>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<link href="~/Content/jquery-ui-git.css" rel="stylesheet" />
<link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/jquery.datetimepicker.full.min.js"></script>
<style TYPE="text/css">
    strong {
        font-weight: bolder;
    }
</style>