@model App.Model.DTO.DTOStateProces
@{
    Layout = null;
}


<div class="col-md-6 offset-md-3">
    @*<h4>Proceso: </h4>*@
    <ul class="timeline">
        @foreach (var def in Model.DefWorkflow.ToList())
        {
            if (def.Secuencia == Model.Secuencia)
            {
                <li>
                    <strong>
                        <a href="#">@def.Nombre</a>
                    </strong>
                </li>
            }
            else
            {
                <li>
                    <a href="#">@def.Nombre</a>
                </li>
            }
        }
    </ul>
</div>

