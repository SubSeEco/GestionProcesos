@model App.Model.Core.Grupo

<h3>Eliminar grupo</h3>
<div class="card">
    <div class="card-content">
        @*<span class="card-title">Confirmar eliminación</span>*@
        <div class="row">
            <div class="input-field col s12 m10">
                <strong>@Html.DisplayNameFor(m => Model.Nombre)</strong>
                <p>@Html.DisplayFor(m => Model.Nombre)</p>
            </div>
        </div>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <button class="waves-effect waves-light btn red" type="submit">Confirmar eliminación</button>
        }
    </div>
</div>
<div class="fixed-action-btn">
    <a href="javascript:history.back()" class="btn-floating btn-large grey"><i class="large material-icons">chevron_left</i></a>
</div>
