@model IEnumerable<App.Model.Cometido.TipoCapitulo>
<div class="container">
    <h3>Tipo Capitulo</h3>
    <div class="card">
        <div class="card-content">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoCapituloId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TcaNombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TcaActivo)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoCapituloId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TcaNombre)
                        </td>
                        <td>
                            @if (item.TcaActivo)
                            {
                                <p>True</p>
                            }
                            else
                            {
                                <p>False</p>
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Detalles", "Details", new { id = item.TipoCapituloId })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div class="fixed-action-btn">
    <a href='@Url.Action("Create")' class="btn-floating btn-large blue tooltipped" data-position="left" data-delay="500" data-tooltip="Agregar nuevo elemento"><i class="large material-icons">add</i></a>
</div>
