@model App.Model.Comisiones.ViaticoInternacional
<div class="container">

    <h3>Eliminar Viatico Honorario Internacional</h3>

    <div class="card">
        <div class="card-content">
            @*<span class="card-title">Confirmar eliminación</span>*@
            <div class="row">
                <div class="input-field col s12 m10">
                    <strong>@Html.DisplayNameFor(m => Model.CiudadId)</strong>
                    <p>@Html.DisplayFor(m => Model.CiudadId)</p>
                </div>
                <div class="input-field col s12 m10">
                    <strong>@Html.DisplayNameFor(m => Model.CiudadNombre)</strong>
                    <p>@Html.DisplayFor(m => Model.CiudadNombre)</p>
                </div>
                <div class="input-field col s12 m10">
                    <strong>@Html.DisplayNameFor(m => Model.Año)</strong>
                    <p>@Html.DisplayFor(m => Model.Año)</p>
                </div>
                <div class="input-field col s12 m10">
                    <strong>@Html.DisplayNameFor(m => Model.CostoVida)</strong>
                    <p>@Html.DisplayFor(m => Model.CostoVida)</p>
                </div>
                <div class="input-field col s12 m10">
                    <strong>@Html.DisplayNameFor(m => Model.PorcentajeRango1)</strong>
                    <p>@Html.DisplayFor(m => Model.PorcentajeRango1)</p>
                </div>
                <div class="input-field col s12 m10">
                    <strong>@Html.DisplayNameFor(m => Model.PorcentajeRango2)</strong>
                    <p>@Html.DisplayFor(m => Model.PorcentajeRango2)</p>
                </div>
                <div class="input-field col s12 m10">
                    <strong>@Html.DisplayNameFor(m => Model.PorcentajeRango3)</strong>
                    <p>@Html.DisplayFor(m => Model.PorcentajeRango3)</p>
                </div>
                <div class="input-field col s12 m10">
                    <strong>@Html.DisplayNameFor(m => Model.PorcentajeRango4)</strong>
                    <p>@Html.DisplayFor(m => Model.PorcentajeRango4)</p>
                </div>
                <div class="input-field col s12 m10">
                    <strong>@Html.DisplayNameFor(m => Model.PorcentajeRango5)</strong>
                    <p>@Html.DisplayFor(m => Model.PorcentajeRango5)</p>
                </div>
                <div class="input-field col s12 m10">
                    <strong>@Html.DisplayNameFor(m => Model.PorcentajeRango6)</strong>
                    <p>@Html.DisplayFor(m => Model.PorcentajeRango6)</p>
                </div>
                <div class="input-field col s12 m10 l10">
                    <label>
                        @Html.CheckBoxFor(m => m.Activo)
                        <span>@Html.LabelFor(m => Model.Activo)</span>
                    </label>
                </div>
            </div>
            <br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(q => Model.ViaticoInternacionalId)

                <button class="waves-effect waves-light btn red" type="submit">Confirmar eliminación</button>
            }
        </div>
    </div>
</div>
<div class="fixed-action-btn">
    <a href="javascript:history.back()" class="btn-floating btn-large grey"><i class="large material-icons">chevron_left</i></a>
</div>
