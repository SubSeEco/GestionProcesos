@model App.Model.Pasajes.Pasaje

<h3>Eliminar Pasajes</h3>

<div class="card">
    <div class="card-content">
        @*<span class="card-title">Confirmar eliminación</span>*@
        <div class="card-content">
            <span class="card-title">Pasajes</span>
            <div class="row">
                <div class="input-field col s12 m10 l3">
                    @Html.DisplayNameFor(m => Model.FechaSolicitud)
                    @Html.DisplayFor(m => Model.FechaSolicitud)
                </div>
                <div class="input-field col s12 m10 l3">
                    @Html.DisplayFor(m => Model.PasajeId)
                    @Html.LabelFor(m => Model.PasajeId)
                </div>
            </div>
            <div id="jQuery_accordion">
                <h3><span style="font-weight: bold">I. Datos del Funcionario: </span></h3>
                <div class="row">
                    <div class="input-field col s12 m10 l8">
                        @Html.DisplayNameFor(m => Model.Nombre)
                        @Html.DisplayFor(m => Model.Nombre)
                    </div>
                    <div class="input-field col s12 m6 l8">
                        @Html.DisplayNameFor(m => Model.Rut)
                        @Html.DisplayFor(m => Model.Rut)
                    </div>
                    <div class="input-field col s12 m6 l4">
                        @Html.DisplayNameFor(m => Model.DV)
                        @Html.DisplayFor(m => Model.DV)
                    </div>
                    <div class="input-field col s12 m6 l6">
                        @Html.DisplayNameFor(m => Model.CalidadDescripcion)
                        @Html.DisplayFor(m => Model.CalidadDescripcion)
                    </div>
                </div>
                <h3><span style="font-weight: bold">II. Justificacion del Viaje: </span></h3>
                <div class="row">
                    <div class="input-field col s12 m10 l10">
                        @Html.DisplayNameFor(m => Model.PasajeDescripcion)
                        @Html.DisplayFor(m => Model.PasajeDescripcion)
                    </div>
                </div>
                <h3><span style="font-weight: bold">III. Datos del Destino: </span></h3>
                <div class="row">
                    <div class="input-field col s12 m6 l4">
                        <div class="row">
                            <span>@Html.LabelFor(m => Model.TipoDestino)</span><br />
                            <label>
                                @Html.RadioButtonFor(m => Model.TipoDestino, true)
                                <span>SI</span>
                            </label>
                            <label>
                                @Html.RadioButtonFor(m => Model.TipoDestino, false)
                                <span>NO</span>
                            </label>
                        </div>
                    </div>
                    <div id="divNacional">
                        <table class="table">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.OrigenRegionDescripcion)</th>
                                <th>@Html.DisplayNameFor(model => model.OrigenComunaDescripcion)</th>
                                <th>@Html.DisplayNameFor(model => model.FechaOrigen)</th>
                                @*<th>@Html.DisplayNameFor(model => model.HoraOrigen)</th>*@
                            </tr>
                            <tr>
                                <th>@Html.DropDownListFor(m => Model.IdRegionOrigen, null, "Seleccione...")</th>
                                <th>@Html.DropDownListFor(m => Model.IdComunaOrigen, null, "Seleccione...", new { style = "width:100px" })</th>
                                <th>
                                    @Html.TextBoxFor(model => Model.FechaOrigen, new { style = "width:130px"/*, disabled = "disabled" */})
                                    @Html.ValidationMessageFor(m => Model.FechaOrigen, "", new { @class = "red-text" })
                                </th>
                                @*<th>
                                    @Html.TextBoxFor(model => Model.HoraOrigen, new { style = "width:130px"/*, disabled = "disabled" */})
                                    @Html.ValidationMessageFor(m => Model.HoraOrigen, "", new { @class = "red-text" })
                                </th>*@
                            </tr>
                        </table>
                    </div>
                    <div id="mydiv">
                        <table class="table">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.OrigenPaisDescripcion)</th>
                                <th>@Html.DisplayNameFor(model => model.OrigenCiudadDescripcion)</th>
                                <th>@Html.DisplayNameFor(model => model.FechaOrigen)</th>
                                @*<th>@Html.DisplayNameFor(model => model.HoraOrigen)</th>*@
                            </tr>
                            <tr>
                                <th>@Html.DropDownListFor(m => Model.IdPaisOrigen, null, "Seleccione...")</th>
                                <th>@Html.DropDownListFor(m => Model.IdCiudadOrigen, null, "Seleccione...", new { style = "width:100px" })</th>
                                <th>
                                    @Html.TextBoxFor(model => Model.FechaOrigen, new { style = "width:130px"/*, disabled = "disabled" */})
                                    @Html.ValidationMessageFor(m => Model.FechaOrigen, "", new { @class = "red-text" })
                                </th>
                                @*<th>
                                    @Html.TextBoxFor(model => Model.HoraOrigen, new { style = "width:130px"/*, disabled = "disabled" */})
                                    @Html.ValidationMessageFor(m => Model.HoraOrigen, "", new { @class = "red-text" })
                                </th>*@
                            </tr>
                        </table>
                    </div>
                    <div class="row">
                        @if (Model.DestinosPasajes.Count > 0)
                        {
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DestinosPasajes.FirstOrDefault().PaisDescripcion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DestinosPasajes.FirstOrDefault().CiudadDescripcion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DestinosPasajes.FirstOrDefault().RegionDescripcion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DestinosPasajes.FirstOrDefault().ComunaDescripcion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(m => Model.DestinosPasajes.FirstOrDefault().FechaIda)
                                    </th>
                                    @*<th>
                                        @Html.DisplayNameFor(m => Model.DestinosPasajes.FirstOrDefault().HoraIda)
                                    </th>*@
                                    <th>
                                        @Html.DisplayNameFor(m => Model.DestinosPasajes.FirstOrDefault().FechaVuelta)
                                    </th>
                                    @*<th>
                                        @Html.DisplayNameFor(m => Model.DestinosPasajes.FirstOrDefault().HoraVuelta)
                                    </th>*@
                                    <th></th>
                                </tr>
                                @for (int i = 0; i < Model.DestinosPasajes.ToArray().Length; i++)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(m => Model.DestinosPasajes.ToArray()[i].PaisDescripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => Model.DestinosPasajes.ToArray()[i].CiudadDescripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => Model.DestinosPasajes.ToArray()[i].RegionDescripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => Model.DestinosPasajes.ToArray()[i].ComunaDescripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => Model.DestinosPasajes.ToArray()[i].FechaIda)
                                        </td>
                                        @*<td>
                                            @Html.DisplayFor(m => Model.DestinosPasajes.ToArray()[i].HoraIda)
                                        </td>*@
                                        <td>
                                            @Html.DisplayFor(m => Model.DestinosPasajes.ToArray()[i].FechaVuelta)
                                        </td>
                                        @*<td>
                                            @Html.DisplayFor(m => Model.DestinosPasajes.ToArray()[i].HoraVuelta)
                                        </td>*@
                                        @*<td>
                                                @Html.ActionLink("Editar", "Edit", "DestinosPasajes", new { id = Model.DestinosPasajes.ToArray()[i].DestinosPasajesId }, null)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Borrar", "Delete", "DestinosPasajes", new { id = Model.DestinosPasajes.ToArray()[i].DestinosPasajesId }, null)
                                            </td>*@
                                    </tr>
                                }
                            </table>
                        }


                        @*@Html.ActionLink("Agregar Destino", "Create", "DestinosPasajes", new { id = Model.PasajeId }, null)*@
                    </div>

                </div>
            </div>
            <div class="section"></div>
        </div>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(q => Model.PasajeId)

            <button class="waves-effect waves-light btn red" type="submit">Confirmar eliminación</button>
        }
    </div>
</div>
<div class="fixed-action-btn">
    <a href="javascript:history.back()" class="btn-floating btn-large grey"><i class="large material-icons">chevron_left</i></a>
</div>

<script>
    $(document).ready(function () {
        $('select').formSelect();
        $('input:hidden').each(function (index, element) {
            $(element).appendTo($(element).parent());
        });
    });

    $(function () {
        $("#jQuery_accordion").accordion({
            collapsible: true, heightStyle: true
        });
    });
</script>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<link href="~/Content/jquery-ui-git.css" rel="stylesheet" />

<link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/jquery.datetimepicker.full.min.js"></script>
