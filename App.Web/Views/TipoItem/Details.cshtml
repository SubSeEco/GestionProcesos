@model App.Model.Cometido.TipoItem
<div class="container">

    <h3>Tipo Item</h3>
    <div class="card">
        <div class="card-content">
            <div class="input-field col s12 m10">
                <strong>@Html.DisplayNameFor(m => Model.TipoItemId)</strong>
                <p>@Html.DisplayFor(m => Model.TipoItemId)</p>
            </div>
            <div class="input-field col s12 m10">
                <strong>@Html.DisplayNameFor(m => Model.TitNombre)</strong>
                <p>@Html.DisplayFor(m => Model.TitNombre)</p>
            </div>
            <div class="input-field col s12 m10 l10">
                <label>
                    @Html.CheckBoxFor(m => m.TitActivo, new { @disabled = "disabled" })
                    <span>@Html.LabelFor(m => Model.TitActivo)</span>
                </label>
            </div>
            <br /><br />
            <a href='@Url.Action("Edit", new { id = Model.TipoItemId })' class="btn blue">Editar</a>
            <a href='@Url.Action("Delete", new { id = Model.TipoItemId })' class="btn red">Eliminar</a>
        </div>

    </div>
</div>
<div class="fixed-action-btn">
    <a href="javascript:history.back()" class="btn-floating btn-large grey"><i class="large material-icons">chevron_left</i></a>
</div>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('input:hidden').each(function (index, element) {
            $(element).appendTo($(element).parent());
        });
    });
</script>
